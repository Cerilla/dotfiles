" Display
syntax on
set ruler
set ignorecase
set number
set ls=2
set mouse=a

" Search
set hlsearch
set incsearch
set showmatch
nnoremap <F3> :set hlsearch!<CR>

" Tab and Indenting
set autoindent
set smartindent
set shiftwidth=3
set tabstop=3
set expandtab

" Create no Backup
set nobackup
set nowritebackup
set noswapfile

" gvim Setting
set gfn=ProFont\ 8
